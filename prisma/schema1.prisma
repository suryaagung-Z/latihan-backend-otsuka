generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/schema1"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_1")
}

model categories {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  name       String?   @db.VarChar(100)
  created_at DateTime? @default(now()) @db.DateTime(0)
  users      users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "categories_ibfk_1")
  todos      todos[]

  @@index([user_id], map: "user_id")
}

model tbl_user {
  id   Int     @id @default(autoincrement())
  name String? @db.VarChar(255)
}

model todo_comments {
  id         Int       @id @default(autoincrement())
  todo_id    Int?
  user_id    Int?
  content    String?   @db.Text
  created_at DateTime? @default(now()) @db.DateTime(0)
  todos      todos?    @relation(fields: [todo_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "todo_comments_ibfk_1")
  users      users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "todo_comments_ibfk_2")

  @@index([todo_id], map: "todo_id")
  @@index([user_id], map: "user_id")
}

model todo_subtasks {
  id         Int       @id @default(autoincrement())
  todo_id    Int?
  title      String?   @db.VarChar(200)
  is_done    Boolean?  @default(false)
  created_at DateTime? @default(now()) @db.DateTime(0)
  todos      todos?    @relation(fields: [todo_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "todo_subtasks_ibfk_1")

  @@index([todo_id], map: "todo_id")
}

model todos {
  id            Int             @id @default(autoincrement())
  user_id       Int?
  category_id   Int?
  title         String?         @db.VarChar(200)
  description   String?         @db.Text
  status        todos_status?   @default(pending)
  priority      todos_priority? @default(medium)
  due_date      DateTime?       @db.Date
  created_at    DateTime?       @default(now()) @db.DateTime(0)
  updated_at    DateTime?       @default(now()) @db.DateTime(0)
  file          String?         @db.VarChar(255)
  todo_comments todo_comments[]
  todo_subtasks todo_subtasks[]
  users         users?          @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "todos_ibfk_1")
  categories    categories?     @relation(fields: [category_id], references: [id], onUpdate: Restrict, map: "todos_ibfk_2")

  @@index([category_id], map: "category_id")
  @@index([user_id], map: "user_id")
}

model users {
  id            Int             @id @default(autoincrement())
  name          String?         @db.VarChar(100)
  email         String?         @unique(map: "email") @db.VarChar(150)
  password_hash String?         @db.VarChar(255)
  created_at    DateTime?       @default(now()) @db.DateTime(0)
  updated_at    DateTime?       @default(now()) @db.DateTime(0)
  categories    categories[]
  todo_comments todo_comments[]
  todos         todos[]
}

enum todos_status {
  pending
  in_progress
  done
}

enum todos_priority {
  low
  medium
  high
}
